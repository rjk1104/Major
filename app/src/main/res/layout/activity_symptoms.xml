<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:fillViewport="true"


    xmlns:android="http://schemas.android.com/apk/res/android" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/news_image1"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@drawable/covid_19"/>
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/symptoms_corona_toolbar"
            app:titleTextColor="#fff"
            app:subtitleTextColor="#fff"
            android:minHeight="?attr/actionBarSize"
            app:navigationIcon="?attr/homeAsUpIndicator"
            android:layout_alignParentTop="true"
            android:background="@color/toolbarTransparent"
            android:layout_marginTop="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/news_image1"
            android:text="Symptoms Of Corona Virus"
            android:textStyle="bold"
            android:textColor="#000"
            android:id="@+id/symptom_def"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/symptom_def"
            android:text="According to WHO"
            android:textStyle="bold"
            android:textColor="@color/red"
            android:id="@+id/by_who"
            android:justificationMode="inter_word"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/by_who"
            android:text="COVID-19 affects different people in different ways. Most infected people will develop mild to moderate illness and recover without hospitalization.
"
            android:textStyle="bold"
            android:textColor="#000"
            android:id="@+id/symptom_text"
            android:justificationMode="inter_word"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/symptom_text"
            android:text="Common Symptoms"
            android:textStyle="bold"
            android:textColor="#000"
            android:id="@+id/symptoms"
            android:textSize="20sp"
            android:justificationMode="inter_word"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/symptoms"
            android:text="Fever"
            android:textSize="13sp"

            android:textColor="#000"
            android:id="@+id/fever"
            android:justificationMode="inter_word"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fever"
            android:text="Dry Cough"
            android:textSize="13sp"

            android:textColor="#000"
            android:id="@+id/dry_cough"
            android:justificationMode="inter_word"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dry_cough"
            android:text="Tiredness"
            android:textSize="13sp"

            android:textColor="#000"
            android:id="@+id/tiredness"
            android:justificationMode="inter_word"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tiredness"
            android:text="Less Common Symptoms"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:id="@+id/less_common"
            android:justificationMode="inter_word"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/less_common"
            android:text="Sore Throat"
            android:textSize="13sp"

            android:textColor="#000"
            android:id="@+id/throat"
            android:justificationMode="inter_word"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/throat"
            android:text="Aches and Pains"
            android:textSize="13sp"

            android:textColor="#000"
            android:id="@+id/pains"
            android:justificationMode="inter_word"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pains"
            android:text="Loss of taste and Smell"
            android:textSize="13sp"

            android:textColor="#000"
            android:id="@+id/taste"
            android:justificationMode="inter_word"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/taste"
            android:text="Headache"
            android:textSize="13sp"

            android:textColor="#000"
            android:id="@+id/head"
            android:justificationMode="inter_word"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />


    </RelativeLayout>
</androidx.core.widget.NestedScrollView>