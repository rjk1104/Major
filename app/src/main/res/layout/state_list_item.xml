<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/state_card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="25dp"
        android:background="#fff"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:id="@+id/counter"
            android:text="1"
            android:textSize="18sp" />
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/state_nameTv"
            android:textSize="15sp"
            android:layout_toRightOf="@+id/counter"
            android:layout_marginLeft="5dp"
            android:textColor="#000"
            android:text="Title"


            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/badge"
            android:layout_toLeftOf="@+id/click_hand"
            android:layout_marginRight="8dp"
            android:text="10"
            android:id="@+id/confirm_cases"
            android:textColor="#fff"

            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_hand"
            android:id="@+id/click_hand"
            />


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D1CFCF"
        android:layout_gravity="bottom"
        />
</androidx.cardview.widget.CardView>